@model IEnumerable<Assignment.Models.Song>

@{
    ViewData["Title"] = "Buy page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Buy music you love!</h1>
<h2>Balance: @ViewBag.Balance</h2>
<a asp-action="BackToUser">Back</a>

<h2>@ViewBag.UserId</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                Operation
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    //@if(item.)
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <form asp-action="Buy" method="post">
                    <input hidden type="text" name="SongId" value="@item.Id" />
                    <input hidden type="text" name="UserId" value="@ViewBag.UserId" />
                    <button type="submit">Buy</button>
                </form>                
            </td>
        </tr>
}
    </tbody>
</table>
<h2>@ViewBag.purchaseDetail</h2>