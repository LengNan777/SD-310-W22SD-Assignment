@model Assignment.Models.Song

@{
    ViewData["Title"] = "Rate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Rate</h1>

<div>
    <h4>Song</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        @if(Model.Rating == null)
        {
            <dd>No rating yet.</dd>
        }
        else
        {
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Rating)
            </dd>
        }        
    </dl>
</div>
<h2>Rating now(from 1 to 5):</h2>
<div>
    <form asp-action="Rate" method="post">
        <input type="number" min="1" max="5" name="rate" />
        <input hidden type="text" name="SongId" value="@Model.Id" />
        <button type="submit">Submit</button>
    </form>        
</div>
<div>
    <a asp-action="User">Back</a>
</div>
