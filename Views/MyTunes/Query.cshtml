@model IEnumerable<Assignment.Models.Order>

@{
    ViewData["Title"] = "Querys";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Revenue = @Model.Count() * 3;
}

<h1>Querys</h1>
<br />
<h3>Input a month to query orders and songs of all users:</h3>
<form asp-action="Query">
    <input type="month" min="2000-01" max="2022-12" name="month" />
    <button type="submit">Submit</button>
</form>
<br />
@if (@Model.Count() != 0)
{
    <h2>You bought @Model.Count() songs in the month, and cost @ViewBag.Revenue dollars in total.</h2>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Song)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Song.Name)
            </td>
        </tr>
}
    </tbody>
</table>
